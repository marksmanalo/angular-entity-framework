                },
                new ProductModel
                {
                    Id = 2,
                    Name = "reqrere",
                    Price = 134.56M,
                    Description = "feafefefef"
                },
                new ProductModel
                {
                    Id = 1,
                    Name = "ljfeifjeoif",
                    Price = 66.66M,
                    Description = "fke;lfjiejf"
                }
            };
        }

        // GET api/products/5
        public string Get(int id)
        {
            return "value";
        }

        // POST api/products
